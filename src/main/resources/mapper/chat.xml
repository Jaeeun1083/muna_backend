<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.life.muna.chat.mapper.ChatReqMapper">
    <select id="existsByUserCodeAndProductCode" parameterType="Long" resultType="boolean">
        SELECT COALESCE ((SELECT 1 FROM TB_CHAT_REQ WHERE USER_CODE=#{userCode} AND PRODUCT_CODE=#{productCode}), 0)
    </select>

</mapper>
